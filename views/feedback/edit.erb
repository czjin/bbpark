<!DOCTYPE html>
<%#include "feedback.h" %>
<% tfetch(QVariantMap, feedback); %>
<html>
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title><%= controller()->name() + ": " + controller()->activeAction() %></title>
</head>
<body>
<p style="color: red"><%=$ error %></p>
<p style="color: green"><%=$ notice %></p>

<h1>Editing Feedback</h1>

<%== formTag(urla("save", feedback["id"]), Tf::Post) %>
  <p>
    <label>ID<br /><input type="text" name="feedback[id]" value="<%= feedback["id"] %>" readonly="readonly" /></label>
  </p>
  <p>
    <label>User ID<br /><input type="text" name="feedback[userId]" value="<%= feedback["userId"] %>" /></label>
  </p>
  <p>
    <label>Content<br /><input type="text" name="feedback[content]" value="<%= feedback["content"] %>" /></label>
  </p>
  <p>
    <label>Voice<br /><input type="text" name="feedback[voice]" value="<%= feedback["voice"] %>" /></label>
  </p>
  <p>
    <input type="submit" value="Update" />
  </p>
</form>

<%== linkTo("Show", urla("show", feedback["id"])) %> |
<%== linkTo("Back", urla("index")) %>
</body>
</html>
