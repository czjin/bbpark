<!DOCTYPE html>
<%#include "parkcoupon.h" %>
<% tfetch(QVariantMap, parkCoupon); %>
<html>
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title><%= controller()->name() + ": " + controller()->activeAction() %></title>
</head>
<body>
<p style="color: red"><%=$ error %></p>
<p style="color: green"><%=$ notice %></p>

<h1>New Park Coupon</h1>

<%== formTag(urla("create"), Tf::Post) %>
  <p>
    <label>Coupon No<br /><input name="parkCoupon[couponNo]" value="<%= parkCoupon["couponNo"] %>" /></label>
  </p>
  <p>
    <label>Check Code<br /><input name="parkCoupon[checkCode]" value="<%= parkCoupon["checkCode"] %>" /></label>
  </p>
  <p>
    <label>Amount<br /><input name="parkCoupon[amount]" value="<%= parkCoupon["amount"] %>" /></label>
  </p>
  <p>
    <label>Status<br /><input name="parkCoupon[status]" value="<%= parkCoupon["status"] %>" /></label>
  </p>
  <p>
    <label>Use Time<br /><input name="parkCoupon[useTime]" value="<%= parkCoupon["useTime"] %>" /></label>
  </p>
  <p>
    <label>Valid till<br /><input name="parkCoupon[validTill]" value="<%= parkCoupon["validTill"] %>" /></label>
  </p>
  <p>
    <input type="submit" value="Create" />
  </p>
</form>

<%== linkTo("Back", urla("index")) %>

</body>
</html>
