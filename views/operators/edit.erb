<%== formTag(urla("save", operators["id"]), Tf::Post) %>
  <p>
    <label>ID<br /><input type="text" name="operators[id]" value="<%= operators["id"] %>" readonly="readonly" /></label>
  </p>
  <p>
    <label>Name<br /><input type="text" name="operators[name]" value="<%= operators["name"] %>" /></label>
  </p>
  <p>
    <label>Code<br /><input type="text" name="operators[code]" value="<%= operators["code"] %>" /></label>
  </p>
  <p>
    <input type="submit" value="Update" />
  </p>
</form>

<%== linkTo("Show", urla("show", operators["id"])) %> |
