<!DOCTYPE html>
<%#include "users.h" %>
<% tfetch(QVariantMap, users); %>
<html>
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title><%= controller()->name() + ": " + controller()->activeAction() %></title>
</head>
<body>
<p style="color: red"><%=$ error %></p>
<p style="color: green"><%=$ notice %></p>

<h1>Editing Users</h1>

<%== formTag(urla("save", users["id"]), Tf::Post) %>
  <p>
    <label>ID<br /><input type="text" name="users[id]" value="<%= users["id"] %>" readonly="readonly" /></label>
  </p>
  <p>
    <label>Name<br /><input type="text" name="users[name]" value="<%= users["name"] %>" /></label>
  </p>
  <p>
    <label>Code<br /><input type="text" name="users[code]" value="<%= users["code"] %>" /></label>
  </p>
  <p>
    <label>Real Name<br /><input type="text" name="users[realName]" value="<%= users["realName"] %>" /></label>
  </p>
  <p>
    <label>Sex<br /><input type="text" name="users[sex]" value="<%= users["sex"] %>" /></label>
  </p>
  <p>
    <label>Avatar<br /><input type="text" name="users[avatar]" value="<%= users["avatar"] %>" /></label>
  </p>
  <p>
    <input type="submit" value="Update" />
  </p>
</form>

<%== linkTo("Show", urla("show", users["id"])) %> |
<%== linkTo("Back", urla("index")) %>
</body>
</html>
